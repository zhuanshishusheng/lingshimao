<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/darker_gray" /> <!-- 定义填充的颜色值 -->

    <stroke
        android:width="1dp"
        android:color="@android:color/darker_gray" /> <!-- 定义描边的宽度和描边的颜色值 -->

    <corners
        android:bottomLeftRadius="15dp"
        android:bottomRightRadius="15dp"
        android:topLeftRadius="15dp"
        android:topRightRadius="15dp" /> <!-- 设置四个角的半径 -->

    <padding
        android:bottom="4dp"
        android:left="10dp"
        android:right="4dp"
        android:top="4dp" /> <!-- 设置各个方向的间隔 -->
</shape>